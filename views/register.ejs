    <div class="container">
      <div class="row">
        <div class="col-md-5 mx-auto">
          <div id="first">
            <div class="myform form">
              <div class="logo mb-3">
                <div class="col-md-12 text-center">
                  <h1>Reg&iacutestrate</h1>
                </div>
              </div>
              <div class="form-group">
                <div class="modal-content">
                  <form
                    action="/register"
                    method="post"
                    name="register"
                    onsubmit="return validateForm()"
                  >
                    <div class="modal-body">
                      <div class="form-group">
                        <label for="email"
                          >Correo eléctronico <span class="req">*</span></label
                        >
                        <input
                          type="email"
                          name="email"
                          class="form-control"
                          id="email"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1"
                          >Nombre <span class="req">*</span></label
                        >
                        <input
                          type="text"
                          name="name"
                          class="form-control"
                          maxlength="100"
                          required
                        />
                      </div>

                      <div class="form-group">
                        <label for="exampleInputEmail1"
                          >Apellido <span class="req">*</span></label
                        >
                        <input
                          type="text"
                          name="lastname"
                          class="form-control"
                          maxlength="100"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1"
                          >Contraseña <span class="req">*</span></label
                        >
                        <input
                          type="password"
                          name="pass"
                          class="form-control"
                          required
                        />
                      </div>
                    </div>
                    <div class="modal-footer">
                      <button
                        type="submit"
                        class="btn btn-block mybtn btn-primary tx-tfm"
                      >
                        Registrarse
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
