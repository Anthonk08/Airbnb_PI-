    <!-- End of NavBar -->

    <!-- This is to make the Form Contents appear on the Image -->

    <form
      class="container mt-3 rounded"
      method="GET"
      action="/search-bookings"
      style="
        margin: 150px;
        max-width: 420px;
        padding: 30px 30px 60px 30px;
        background-color: white;
        font-family: Helvetica;
        font-weight: 600;
        color: #484848;
      "
    >
      <h1 style="font-size: 2em; font-weight: bold; margin-bottom: 15px">
        Reserva casas, apartamentos y experiencias únicas.
      </h1>
      <div class="form-group" style="font-size: small">
        
        <select class="custom-select mt-1" name="city">
          <option value="0" selected>Provincia</option>
          <% cities.forEach(function(city){ %>
            <option value="<%=city.id_provincia%>"><%=city.provincia%></option>
            <%})%></select
        >
      </div>
      
      <div class="form-group" style="font-size: small">
        <label>Filtro</label><br />
        <select class="custom-select mt-1" name="persons">
          <option selected value="0">Adultos</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">Mas...</option></select
        ><br />

        <select class="custom-select mt-1" name="rooms">
          <option selected value="0">Habitaciones</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">Mas...</option></select
        ><br />

        <select class="custom-select mt-1" name="beds">
          <option selected value="0">Camas</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">Mas...</option></select
        ><br />

        <select class="custom-select mt-1" name="baths">
          <option selected value="0">Baños</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">Mas...</option></select
        ><br />
      </div>
      <div class="form-group">
        <button
          type="submit"
          class="btn btn-primary btn-lg"
          style="float: right"
        >
          Buscar
        </button>
      </div>
    </form>

    <!-- Form Ends here. -->

		<!-- Form Ends here. -->
		<hr class="form_line">

		<!-- Hospedajes Section -->
    <div></div>


